# list required env vars (no secrets)
# Database
#Local dev (works if mongodDB is installed locally)
MONGO_URI=mongodb://localhost:27017/calorie_tracker

# Server
PORT=4000
CLIENT_ORIGIN=http://localhost:5173
DEFAULT_TZ=Europe/Helsinki

# Auth
JWT_ACCESS_SECRET=__set_me__
JWT_REFRESH_SECRET=__set_me__
ACCESS_TOKEN_EXPIRES=15m
REFRESH_TOKEN_EXPIRES=7d
COOKIE_NAME=refreshToken

# FoodData Central
FDC_API_KEY=__set_me__
FDC_ALLOWED_DATATYPES=Foundation,SR Legacy

# Maintenance flags (keep false in prod)
CLEAR_FOOD_CACHES=false
CLEAR_DIARY_ENTRIES=false
